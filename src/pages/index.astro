---
import Layout from "../layouts/Layout.astro";
import BibleVerse from "../components/BibleVerse.astro";

interface Groups {
    name: string;
    image: string
}

const churchGroups: Groups[] = [
    { name: "Kingdom Edge Kids", image: "/kids.webp" },
    { name: "Kingdom Edge Teens", image: "/teens.jpg" },
    { name: "Kingdom Edge Singles", image: "/singles.webp" }
]

---

<Layout title="Welcome to Kingdom Edge Assembly">
    <section class="h-screen relative">
        <img src="/landing-page.jpg" class="h-full w-full object-cover brightness-50 -z-10 absolute" />
        <nav class="w-full flex items-center justify-between h-14 p-8 md:p-10 lg:p-9">
            <img src="/favicon.png" class="w-12 h-12"/>

            <button class="bg-white py-3 px-10 rounded-3xl font-medium">
                Join us
            </button>
        </nav>
        <div class="w-full flex items-center justify-center h-3/5">
            <h1 class="font-bold text-white text-5xl xl:text-7xl text-center">
                Experience the <br>
                <span class="text-primary">transformative power</span> <br>
                of God's grace.
            </h1>

        </div>
        <div class="flex flex-col items-center text-center text-white w-full mx-auto absolute bottom-2">
            <div class="welcome-tag">
                <img width="50px" height="50px" src="/chevron-down-outline.svg"/>
                <h4>Welcome</h4>
            </div>
            
        </div>
    </section>

    <section class="flex flex-col items-center py-4 md:py-6 lg:py-10">
        <div class="my-4 md:my-6 lg:my-8">
            <h2 class="font-semibold font-work-sans text-center text-xl md:text-2xl lg:text-3xl xl:text-4xl">
                Seek First the Kingdom of God
            </h2>
            <h4 class="text-center text-md mt-2 md:text-xl lg:text-xl font-medium">
                We raise kingdom minded people
            </h4>
        </div>

        <div class="w-4/5 md:w-3/4">
            <img 
                src="/concert.jpg" 
                alt="People worshipping God in a concert" 
                class="w-full lg:aspect-[16/6] object-cover"
            />
    
            <div class="grid grid-cols-1 gap-3 md:gap-5 lg:gap-0 lg:grid-cols-2 my-4 md:my-7 lg:my-10">
                <p class="text-md text-center lg:text-left w-full lg:w-[95%] font-medium font-inter">
                    Kingdom Edge Assembly was born to raise kingdom minded people, 
                    to propagate the undiluted message of God’s kingdom, to reach out to the unchurched, 
                    to express true love and care of Lord and Saviour 
                    Jesus Christ with passion for souls, prayer and ministry of the word. 
                </p>
                <p class="text-md text-center lg:text-left w-full lg:w-[95%] font-medium font-inter">
                    We are a group of people tired of hypocrisy, 
                    striving to serve and worship God from a genuine heart. 
                    Expressing real love of our Lord Jesus which is very scarce in the 
                    body of Christ today. Spreading the good news of Christ with care, 
                    love and respect for people.
                </p>
    
            </div>
        </div>
    </section>

    <section>
        <BibleVerse />
    </section>

    <section class="py-4 md:py-6 lg:py-10 h-auto flex flex-col items-center">

        <div class="my-3 md:my-5 lg:my-8">
            <h4 class="text-center text-md md:text-lg lg:text-xl font-medium font-body">
                MISSION AND VISION
            </h4>
            <h2 class="mt-2 font-semibold font-work-sans text-center text-xl md:text-2xl lg:text-3xl xl:text-4xl">
                Mission and Vision about Church
            </h2>
        </div>

        <div class="grid grid-cols-1 gap-8 lg:grid-cols-2 w-5/6 md:w-3/5 h-fit">
            <div class="flex flex-col gap-3 md:gap-6 lg:gap-9">
                <img 
                    loading="lazy" alt="" 
                    class="object-cover w-full lg:min-h-[400px] h-full" 
                    src="/mission.jpg"
                />
                <div class="mt-auto">
                    <h3 class="font-regular font-body">
                        MISSION
                    </h3>
                    <p>
                        To raise kingdom minded people from 
                        our neighbourhood to the nations by the power of God’s love.
                    </p>
                    <button class="bg-primary my-3 text-white/95 font-thin px-3 py-2 rounded-3xl">
                        Learn More
                    </button>
                </div>
            </div>

            <div class="flex flex-col-reverse lg:flex-col gap-3 md:gap-6 lg:gap-9">
                <div class="h-full">
                    <h3 class="font-regular font-body">
                        VISION
                    </h3>
                    <p>
                        To proclaim good news to the poor, 
                        freedom for the prisoners. 
                        Recovery of sight to the blind, to set the oppressed free 
                        and to proclaim the Lord’s favour.
                    </p>
                    <button class="bg-primary my-3 text-white/95 font-thin px-3 py-2 rounded-3xl">
                        Learn More
                    </button>
                </div>
                <img 
                    src="/fellowship.webp"
                    loading="lazy" alt="" 
                    class="object-cover w-full lg:min-h-[400px] h-full" 
                
                />
            </div>

        </div>
    </section>
    <hr class="w-full my-5 border-slate-300" />

    <section class="py-4 md:py-6 lg:py-10 h-auto flex flex-col items-center">
        <div class="my-3 md:my-5 lg:my-8">
            <h4 class="text-center text-md md:text-lg font-medium font-body">
                OUR COMMUNITY
            </h4>
            <h2 class="font-bold text-center text-xl md:text-2xl lg:text-3xl xl:text-4xl">
                Come join our church groups, <br> from the young to the old.
            </h2>
        </div>

        <ul class="grid list-none grid-cols-1 gap-5 md:grid-cols-2 w-5/6 md:w-3/4">
            {
                churchGroups.map((group) => (
                    <li class="w-full">
                        <img
                            src={group.image}
                            alt="A group of Kids"
                            class="w-full aspect-video object-cover object-center"
                        />
                        <p class="font-work-sans mt-3">{group.name}</p>
                    </li>
                ))
            }
        </ul>


    </section>



</Layout>

<style>
    @keyframes bounce {
        0% { transform: translateY(0); }
        50% { transform: translateY(-20px) }
        100% { transform: translateY(0); }
    }

    .welcome-tag {
        animation: bounce 2s ease-in-out;
        animation-iteration-count: infinite;
        font-family: 'Work-Sans', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }
    .welcome-tag img {
        margin: 0 auto;
    }

</style>